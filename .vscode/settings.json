{
    "python.defaultInterpreterPath": "python",
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.mypyEnabled": false,
    "mypy.targets": [
        "./src"
    ],
    "python.formatting.provider": "black",
    "isort.check": true,
    "[python]": {
        "editor.wordBasedSuggestions": false,
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file",
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "python.terminal.activateEnvInCurrentTerminal": false,
    "python.terminal.activateEnvironment": false,
    "python.envFile": "${workspaceFolder}/.env",
    "editor.rulers": [88],
    "python.analysis.typeCheckingMode": "off",
    "autoDocstring.docstringFormat": "google-notypes",
    "autoDocstring.includeExtendedSummary": true,
    "python.languageServer": "Pylance",
    "VSCodeCounter.history": 1,
    "VSCodeCounter.outputAsCSV": false,
    "VSCodeCounter.outputAsText": false,
    "VSCodeCounter.outputAsMarkdown": true,
    "VSCodeCounter.outputDirectory": "docs",
    "VSCodeCounter.saveLocation": "workspace settings"
}
